@{ ViewBag.Title = "Index"; }


<div class="container col-md-6">
    <div class="tab-content">
        <div class="tab-pane active">
            <div class="row">
                <div class="col-md-12 col-md-push-2 well" >
                    <div class="row" style="margin-top:5%">
                        <div class="panel-heading">
                            <div class="col-md-12">
                                <h4>
                                    <i class="fa fa-file-text-o"></i>
                                    <span>Product Data - Import CSV and FLF</span>
                                </h4>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <section>
                        @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
                        {
                            <div class="form-group" style="margin-top:5%">
                                <label for="postedFile">File Upload</label>
                                <input type="file" id="postedFile" class="form-control-file" name="postedFile" accept=".csv, .flf" />
                            </div>
                            <div class="form-group row">
                                @*<div class="col-sm-10">*@
                                <div class="col-md-10" style="margin-left: 41.66666667%;">
                                    <input type="submit" class="btn btn-danger" value="Upload" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-offset-3 col-md-10">
                                    <span style="color:red;">@ViewBag.Message</span>
                                </div>
                            </div>
                        }
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>

